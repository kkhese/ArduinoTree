// Digital OutputPin******************
// Send Signal to DC motor
int volumePin = 3;
// Indicate the end of one song
int nextPin = 2;      // Connected to white LED

// Analog InputPin********************
int rawvolumePin = 3;

// Variables**************************
float volume;

void setup(void) {
  // Serial Monitoring
  Serial.begin(9600);
  // Pin definition
  pinMode(rawvolumePin, INPUT);

  pinMode(nextPin, OUTPUT);   // White LED 
  pinMode(volumePin, OUTPUT); // DC motor input
  pinMode(9, OUTPUT);         // Buzzer

  // Set white LED low at the begining
  digitalWrite(nextPin, LOW); 

  // Play song 1-3 once
  sing(1);
  sing(2);
  sing(3);
}

// No repeat
void loop() {
}

// Addtional functions and variables*****************
int song;   // variable for song #

// Decide which song would be played ****************
void sing(int s) {
  // determin song # 1~3
  song = s;
  // if 3rd song
  if (song == 3) {
    int size = sizeof(wish_melody) / sizeof(int);
    for (int thisNote = 0; thisNote < size; thisNote++) {
      volume = analogRead(rawvolumePin);
      // to calculate the note duration, take one second
      // divided by the note type.
      //e.g. quarter note = 1000 / 4, eighth note = 1000/8, etc.
      int noteDuration = 1000 / wish_tempo[thisNote];

      // Call buzz function for making sound!
      buzz(melodyPin, wish_melody[thisNote], noteDuration);

      // to distinguish the notes, set a minimum time between them.
      // the note's duration + 30% seems to work well:
      int pauseBetweenNotes = noteDuration * 1.30;
      delay(pauseBetweenNotes);

      // stop the tone playing:
      buzz(melodyPin, 0, noteDuration);
      Serial.println(volume);   // check 
    }
    // Blink white LED once for notifying the end of song
    digitalWrite(nextPin, HIGH);
    delay(1000);
    digitalWrite(nextPin, LOW);
  }
  // if 2nd song
  else if (song == 2) {
    int size = sizeof(santa_melody) / sizeof(int);
    for (int thisNote = 0; thisNote < size; thisNote++) {
      volume = analogRead(rawvolumePin);
      // to calculate the note duration, take one second
      // divided by the note type.
      //e.g. quarter note = 1000 / 4, eighth note = 1000/8, etc.
      int noteDuration = 900 / santa_tempo[thisNote];

      // Call buzz function for making sound!
      buzz(melodyPin, santa_melody[thisNote], noteDuration);

      // to distinguish the notes, set a minimum time between them.
      // the note's duration + 30% seems to work well:
      int pauseBetweenNotes = noteDuration * 1.30;
      delay(pauseBetweenNotes);

      // stop the tone playing:
      buzz(melodyPin, 0, noteDuration);
    }
    // Blink white LED once for notifying the end of song
    digitalWrite(nextPin, HIGH);
    delay(1000);
    digitalWrite(nextPin, LOW);
  } 
  else {
    int size = sizeof(melody) / sizeof(int);
    for (int thisNote = 0; thisNote < size; thisNote++) {
      volume = analogRead(rawvolumePin);
      analogWrite(volumePin, volume/4);
      // to calculate the note duration, take one second
      // divided by the note type.
      //e.g. quarter note = 1000 / 4, eighth note = 1000/8, etc.
      int noteDuration = 1000 / tempo[thisNote];

      // Call buzz function for making sound!
      buzz(melodyPin, melody[thisNote], noteDuration);
    
      // to distinguish the notes, set a minimum time between them.
      // the note's duration + 30% seems to work well:
      int pauseBetweenNotes = noteDuration * 1.30;
      delay(pauseBetweenNotes);

      // stop the tone playing:
      buzz(melodyPin, 0, noteDuration);
    }
    // Blink white LED once for notifying the end of song
    digitalWrite(nextPin, HIGH);
    delay(1000);
    digitalWrite(nextPin, LOW);

    // Stop DC motor
    analogWrite(volumePin, 0);
  }
}

// Generate signal for buzzer corresponding to given frequency and tempo
// Digital Pin 13, built-in LED was assigned while play music, but it was removed.
// Otherwise, nothing was modified.  
void buzz(int targetPin, long frequency, long length) {
  long delayValue = 1000000 / frequency / 2; // calculate the delay value between transitions
  //// 1 second's worth of microseconds, divided by the frequency, then split in half since
  //// there are two phases to each cycle
  long numCycles = frequency * length / 1000; // calculate the number of cycles for proper timing
  //// multiply frequency, which is really cycles per second, by the number of seconds to
  //// get the total number of cycles to produce
  for (long i = 0; i < numCycles; i++) { // for the calculated length of time...
    digitalWrite(targetPin, HIGH); // write the buzzer pin high to push out the diaphram
    delayMicroseconds(delayValue); // wait for the calculated delay value
    digitalWrite(targetPin, LOW); // write the buzzer pin low to pull back the diaphram
    delayMicroseconds(delayValue); // wait again or the calculated delay value
  }
}
